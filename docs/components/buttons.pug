extends ../layout

block content
  .container
    .display-2 Buttons

    .display-1 Solid buttons
    button.btn.btn-default Default
    button.btn.btn-primary Primary
    button.btn.btn-accent Accent
    button.btn.btn-primary(disabled) Disabled

    .display-1 Raised buttons
    button.btn-raised.btn-default Default
    button.btn-raised.btn-primary Primary
    button.btn-raised.btn-accent Accent
    button.btn-raised.btn-primary(disabled) Disabled

    .display-1 Flat buttons
    button.btn.btn-flat-default Default
    button.btn.btn-flat-primary Primary
    button.btn.btn-flat-accent Accent
    button.btn.btn-flat-primary(disabled) Disabled


